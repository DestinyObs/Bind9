9.3.168.192.in-addr.arpa.   IN      PTR     prox2.cybacad.lab.      ; 192.168.3.9 → prox2.cybacad.lab.
1.3.168.192.in-addr.arpa.   IN      PTR     pfsense.cybacad.lab.    ; 192.168.3.1 → pfsense.cybacad.lab.
2.3.168.192.in-addr.arpa.   IN      PTR     windows.cybacad.lab.    ; 192.168.3.2 → windows.cybacad.lab.

